--medium-carmine: hsla(5, 51%, 46%, 1);
--charcoal: hsla(196, 20%, 26%, 1);
--amaranth-pink: hsla(342, 71%, 79%, 1);
--nickel: hsla(160, 3%, 43%, 1);
--moss-green: hsla(68, 28%, 46%, 1);
--arylide-yellow: hsla(53, 56%, 62%, 1);

/* SCSS HEX */
